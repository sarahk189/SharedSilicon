@model SignUpViewModel
@using SharedSilicon.ViewModels

@{
    ViewData["Title"] = Model.PageTitle;
}


<div class="create-account ">
    <div class="content">
        <form method="post" asp-controller="Auth" asp-action="SignUp" novalidate>

            <h1>Create Account</h1>
            <p>Already have an account? <a asp-controller="Auth" asp-action="SignIn">Sign in here.</a></p>

            <div class="name-by-side">
                <div id="form-firstname" class="input-field">
                    <label asp-for="Form.FirstName"></label>
                    <span asp-validation-for="Form.FirstName" class="error-message"></span>
                    <input asp-for="Form.FirstName" />
                </div>
                <div id="form-lastname" class="input-field">
                    <label asp-for="Form.LastName"></label>
                    <span asp-validation-for="Form.LastName" class="error-message"></span>
                    <input asp-for="Form.LastName" />
                </div>
            </div>

            <div id="form-email" class=" input-field">
                <label asp-for="Form.Email"></label>
                <span asp-validation-for="Form.Email" class="error-message"></span>
                <input asp-for="Form.Email" />
            </div>

            <div id="form-password" class="input-field">
                <label asp-for="Form.Password"></label>
                <span asp-validation-for="Form.Password" class="error-message"></span>
                <input asp-for="Form.Password" />
            </div>

            <div id="form-comfirm" class="input-field">
                <label asp-for="Form.ConfirmPassword"></label>
                <span asp-validation-for="Form.ConfirmPassword" class="error-message"></span>
                <input asp-for="Form.ConfirmPassword" />
            </div>

            <div id="form-terms" class="checkbox">
                <input asp-for="Form.TermsAndConditions" />
                <label asp-for="Form.TermsAndConditions">I agree to the <a asp-controller="About" asp-action="Terms">Terms</a> & <a asp-controller="About" asp-action="Conditions">Conditions</a></label>
                <span asp-validation-for="Form.TermsAndConditions" class="error-message"></span>
            </div>

            <button id="form-submit" class="btn-theme-s" type="submit">@Model.PageTitle</button>
        </form>
    </div>
</div>


@await Html.PartialAsync("_ValidationScriptPartial")

